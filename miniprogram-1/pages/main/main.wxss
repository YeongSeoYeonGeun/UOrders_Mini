/**main.wxss**/
.main-top-container {
  display: flex;
  flex-direction: column;
  height: 160px;
  background-color: #0B463C;
}

.intro-container {
  display: flex;
  flex-direction: column;
  margin-left: 32px;
}

.userIntro-text {
  color : white;
  font-size: 20px;
  margin-top:8px;
  font-weight: bold;
}

.intro-text {
  color : white;
  font-size: 14px;
  margin-top: 4px;
}

.storeFilter-container {
  display: flex;
  flex-direction: row;
  margin-left: 8px;
  margin-top: 72px;
}

.storeFilter-text { 
  color : white;
  font-size: 11px;
  margin-left:10px;
  margin-right:10px;
}

.cafe-scroll-page{
  background-color: #0B463C;
}


/** cafe list **/

.cafe-item {
  display: flex;
  flex-direction: row;
}

.cafe-content {
  margin-top: 14px;
  margin-bottom: 8px;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.cafe-image{
  border-radius: 4%;
  background-color: #cccccc;
  width: 70px;
  height: 70px;
  margin: 8px 10px 8px 12px;
}
.cafe-distance-text{
  color: #E5B000;
  float: right;
  margin-right: 12px;
}

.border{
  height: 1px;
  background-color: #dddddd;
}


