/**cafemenu.wxss**/
.cafemenu-top-container {
  display: flex;
  flex-direction: column;
  height: 150px;
  background-color: #FFFFFF;
}
.backbtn-bar {
  height: 48px;
}
.cafeName-text {
  position: absolute;
  color : text-black1;
  font-size: 18px;
  font-weight : 500;
  left: 50%;
  transform: translate(-50%, -50%);
}

.cafeLocation-text {
  position: absolute;
  color : text-black3;
  font-size: 12px;
  font-weight: normal;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: 33px;
}

