/** cafe menu list **/
.menu-item {
  height: 70px;
  display: flex;
  flex-direction: row;
}

.menu-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.menu-name {
  margin-top: 14px;
  margin-left: 24px;
  font-size: 18px;
}

.menu-price {
  margin-top: 4px;
  margin-left: 24px;
  font-size: 12px;
}

.menu-image{
  background-color: #e49b14;
  border-radius: 70%;
  width: 52px;
  height: 52px;
  align-content: right;
  margin-right: 16px;
  margin-top: 9px;
}

.border{
  height: 1px;
  background-color: #dddddd;
}


