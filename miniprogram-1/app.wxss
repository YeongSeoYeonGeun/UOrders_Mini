/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.toolbar { 
  height: 68px;
  padding-top: 20px;
}

.toolbar-btn{
  width: 48px;
  height: 48px;
}

.toolbar-title-container{
  /* margin: auto; */
  position:absolute; 
  top: 0; 
  left: 158px;
}

.toolbar-title-text{
  color: black;
  font-size: 16px;
  line-height: 48px;
  left: 50%;
  transform: translate(-50%, 0%);
}

.toolbar-border{
  color: #eeeeee;
  height: 1px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.height-container {
  height: 100%;
  display: flex;
  flex-direction: column;
} 

